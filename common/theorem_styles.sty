\newcounter{ThmCounter}
\newcounter{ExCounter}

% Unlike the custom macros, the theorems are lowercase because cleveref has these names predefined (not in bulgarian, but it implies that the environments are conventional).

\theoremstyle {plain}

\crefname   {proposition}  {твърдение}    {твърдения}
\Crefname   {proposition}  {Твърдение}    {Твърдения}
\newtheorem {proposition}  [ThmCounter]   {Твърдение}

\crefname   {corollary}    {следствие}    {следствия}
\Crefname   {corollary}    {Следствие}    {Следствия}
\newtheorem {corollary}    [ThmCounter]   {Следствие}

\crefname   {lemma}        {лема}         {леми}
\Crefname   {lemma}        {Лема}         {Леми}
\newtheorem {lemma}        [ThmCounter]   {Лема}

\crefname   {theorem}      {теорема}      {теореми}
\Crefname   {theorem}      {Теорема}      {Теореми}
\newtheorem {theorem}      [ThmCounter]   {Теорема}

\theoremstyle {definition}
\crefname   {definition}   {определение} {определения}
\Crefname   {definition}   {Определение} {Определения}
\newtheorem {definition}   [ThmCounter]  {Определение}

\crefname   {exercise}     {задача}      {задачи}
\Crefname   {exercise}     {Задача}      {Задачи}
\newtheorem {exercise}     [ExCounter]   {Задача}

\crefname   {remark}       {забележка}   {забележки}
\Crefname   {remark}       {Забележка}   {Забележки}
\newtheorem {remark}       [ThmCounter]  {Забележка}

\crefname   {exercise}     {решение}     {решения}
\Crefname   {exercise}     {Решение}     {Решения}
\newtheorem*{solution}                   {Решение}
