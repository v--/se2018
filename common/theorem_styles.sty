\newcounter{counters@theorem}
\newcounter{counters@exercise}

\theoremstyle {plain}

\crefname   {proposition}  {твърдение}         {твърдения}
\Crefname   {proposition}  {Твърдение}         {Твърдения}
\newtheorem {proposition}  [counters@theorem]  {Твърдение}

\crefname   {corollary}    {следствие}         {следствия}
\Crefname   {corollary}    {Следствие}         {Следствия}
\newtheorem {corollary}    [counters@theorem]  {Следствие}

\crefname   {lemma}        {лема}              {леми}
\Crefname   {lemma}        {Лема}              {Леми}
\newtheorem {lemma}        [counters@theorem]  {Лема}

\crefname   {theorem}      {теорема}           {теореми}
\Crefname   {theorem}      {Теорема}           {Теореми}
\newtheorem {theorem}      [counters@theorem]  {Теорема}

\theoremstyle {definition}

\crefname   {definition}   {определение}       {определения}
\Crefname   {definition}   {Определение}       {Определения}
\newtheorem {definition}   [counters@theorem]  {Определение}

\crefname   {exercise}     {задача}            {задачи}
\Crefname   {exercise}     {Задача}            {Задачи}
\newtheorem {exercise}     [counters@exercise] {Задача}

\crefname   {remark}       {забележка}         {забележки}
\Crefname   {remark}       {Забележка}         {Забележки}
\newtheorem {remark}       [counters@theorem]  {Забележка}

\crefname   {solution}     {решение}           {решения}
\Crefname   {solution}     {Решение}           {Решения}
\newtheorem*{solution}                         {Решение}
